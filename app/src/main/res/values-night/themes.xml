<resources>
    <!-- Base application theme. -->
    <style name="Theme.PoopTracker" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/header_accent_dark</item>
        <item name="colorPrimaryVariant">@color/background_dark</item>
        <item name="colorOnPrimary">@color/text_dark</item>
        <item name="colorOnSurface">@color/light_purple_text_dark</item>
        <item name="chipStyle">@style/Widget.App.Chip</item>
        <item name="colorSurface">@color/popupBackground</item>

        <!-- Option menu tints. (does not change) -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/header_accent_dark</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:colorBackground">?attr/colorPrimaryVariant</item>
        <item name="colorOutline">@color/outline_dark</item>

        <!-- ImageView tints. -->
        <item name="android:tintMode">src_atop</item>
        <item name="android:tint">@color/img_tint_dark</item>
    </style>

    <!-- Option menu tints. (does not change) -->
    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/colorPrimary</item>
    </style>

    <!-- Chip style. -->
    <style name="Widget.App.Chip" parent="Widget.Material3.MaterialTimePicker.Display">
        <item name="android:textColor">@color/popup_display_text_color</item>
    </style>

    <!-- EditText style. (when you select the text box in the reminder selector) -->
    <style name="Widget.AppCompat.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/background_dark</item>
    </style>


    <!-- Alert Dialog Style. -->
    <style name="AlertDialogStyle">
        <item name="shapeAppearanceMediumComponent">@style/RoundShapeAppearance</item>

        <item name="materialAlertDialogTitleTextStyle">@style/TitleAppearance</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyAppearance</item>

        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="android:windowTitleStyle">@style/TitleAppearance</item>
    </style>

    <style name="RoundShapeAppearance" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="TitleAppearance" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textAppearance">@style/TitleText</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BodyAppearance" parent="@style/MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textAppearance">@style/BodyText</item>
    </style>

    <style name="BodyText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">left</item>
    </style>

</resources>